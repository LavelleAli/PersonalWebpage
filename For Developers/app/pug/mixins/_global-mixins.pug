//- Mixin for nav menu item
mixin nav_item(title, url, additionalClass='')

	li(class = additionalClass)

		a(href = url)
			span= title

		block

//- Mixin for site main
mixin site_main(object)

	//- Default
	- elClass = 'ptf-main'

	//Main
	main(class = elClass)

		block

