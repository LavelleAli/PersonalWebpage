//Header
header.ptf-header

	.ptf-navbar.ptf-navbar--main.ptf-navbar--fixed

		.ptf-navbar-background

		.ptf-navbar-inner

			.ptf-navbar-inner--left

				//Logo
				a(href='index.html', class='ptf-navbar-logo')

					img(src='assets/img/root/logo.png', alt=SiteName)

			.ptf-navbar-inner--center

				.container.h-100

					//Default Navigation
					nav.ptf-default-menu__navigation.h-100

						//Navigation
						ul.sf-menu

							each Section in Sections

								li(data-menuanchor=Section)

									a(href='#' + Section)= Section

			.ptf-navbar-inner--right

				.d-flex.align-items-center

					//Menu Burger
					a(href='#', class='ptf-menu-burger js-offcanvas-menu-open')

						<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="square" stroke-linejoin="round"><line x1="3" y1="12" x2="21" y2="12"/><line x1="3" y1="6" x2="21" y2="6"/><line x1="3" y1="18" x2="21" y2="18"/></svg>

					//Socials
					.ptf-navbar-socials

						a(href='#', class='ptf-social-icon') #[i.lnir-facebook-filled]
						a(href='#', class='ptf-social-icon') #[i.lnir-twitter-original]
						a(href='#', class='ptf-social-icon') #[i.lnir-pinterest]
						a(href='#', class='ptf-social-icon') #[i.lnir-linkedin-original]

//Offcanvas Menu
.ptf-offcanvas-menu

	.ptf-offcanvas-menu__header

		//Locales
		nav.ptf-offcanvas-menu__locales
			a(href='#', class='active') Eng
			a(href='#') Fra
			a(href='#') Ger

		//Menu Burger
		a(href='#', class='ptf-menu-burger ptf-menu-burger--opened js-offcanvas-menu-close')

			<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="square" stroke-linejoin="round"><line x1="18" y1="6" x2="6" y2="18"/><line x1="6" y1="6" x2="18" y2="18"/></svg>

	nav.ptf-offcanvas-menu__navigation

		//Navigation
		ul.sf-menu

			each Section in Sections

				li(data-menuanchor=Section)

					a(href='#' + Section)= Section

	.ptf-offcanvas-menu__footer

		//Socials
		.ptf-offcanvas-menu__socials

			a(href='#', class='ptf-social-icon') #[i.lnir-facebook-filled]
			a(href='#', class='ptf-social-icon') #[i.lnir-twitter-original]
			a(href='#', class='ptf-social-icon') #[i.lnir-pinterest]
			a(href='#', class='ptf-social-icon') #[i.lnir-linkedin-original]

		//Copyright
		.ptf-offcanvas-menu__copyright

			p &copy; Rojer 2022.

//Site Overlay
.ptf-site-overlay