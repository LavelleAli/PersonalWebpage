mixin ptf_progress_bar(object)

	//- Default
	- object = object || {}
	- object.title = object.title || ''
	- object.value = object.value || '99'
	- object.speed = object.speed || '1000'

	//- Element Class
	- elClass = 'ptf-progress-bar'

	//Progress Bar
	div(class=elClass, data-final-value=object.value, data-animation-speed=object.speed)

		if object.title != ''

			h6.ptf-progress-bar__title

				=object.title

				span.counter 0

			.ptf-progress-bar__bar

				span