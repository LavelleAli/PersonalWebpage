mixin ptf_video_button(object)

	//- Default
	- object = object || {}
	- object.url = object.url || ''
	- object.custom_class = object.custom_class || ''

	//- Element Class
	- elClass = 'ptf-video-button'
	- elClass += ' ' + object.custom_class

	//Video Button
	a(class=elClass, href=object.url, data-fancybox, data-small-btn='true')
		<svg xmlns="http://www.w3.org/2000/svg" width="21" height="18" fill="none"><path fill="currentColor" d="M21 9 .75 17.66V.34L21 9Z"/></svg>